<GradientBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Ustaw tło na biało, efektywne tło zostanie ustawione w Pythonie
        Rectangle:
            size: self.size
            pos: self.pos
            # Usuwamy linię z 'texture:', ponieważ tekstura jest ustawiana w Pythonie

FloatLayout:
    Button:
        text: 'Przycisk 1'
        size_hint: 0.6, 0.1  # Przyciski będą zajmowały 60% szerokości i 15% wysokości ekranu
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}  # Ustawienie przycisku 1 nieco wyżej na ekranie
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [self.height / 2.2, ]  # Zaokrąglenie wyniesie połowę wysokości przycisku

    Button:
        text: 'Przycisk 2'
        size_hint: 0.6, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}  # Ustawienie przycisku 2 dokładnie na środku ekranu
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [self.height / 2.2, ]

    Button:
        text: 'Przycisk 3'
        size_hint: 0.6, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}  # Ustawienie przycisku 3 nieco niżej na ekranie
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [self.height / 2.2, ]
