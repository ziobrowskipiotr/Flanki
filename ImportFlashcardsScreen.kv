#:import Window kivy.core.window.Window
<ImportFlashcardsScreen>:
    FloatLayout:

        #Image:
		#    id: bck
		#    source: ''
		#    size: root.size

		Label:
            id: bck
            text: ''  # Początkowo pusty, zostanie ustawiony gdy plik zostanie wybrany
            size_hint_y: None
            height: '48dp'
            valign: 'middle'
            halign: 'center'

        Video:
            id: video
            source: 'galactic.avi'
            options: {'eos': 'loop'}
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            id: info_label
            size_hint_y: None
            height: Window.height * 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.68}
            text: 'Choose file'  # Początkowo pusty, zostanie ustawiony gdy będzie trzeba wyświetlić komunikat
            font_size: min(Window.height * 0.08, Window.width * 0.08)
            bold: True  # Pogrubia tekst

        MyButton:
            text: 'Home'
            size_hint: 0.28, None
            height: Window.height * 0.08
            pos_hint: {'x': 0, 'top': 1}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: self.bgc_homeback
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 4, ]
            on_press: self.bgc_homeback = self.background_down_color
            on_release:
                self.bgc_homeback = [0.4, 0.4, 0.4, 1]
                app.change_screen('main')

        MyButton:
            text: 'Import'
            size_hint: 0.2, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}
            size_hint: 0.58, None
            font_size: min(self.height * 0.4, self.width * 0.09)
            height: Window.height * 0.1
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: self.bgc_import_f
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 2.2, ]
            on_press: self.bgc_import_f = self.background_down_color
            on_release:
                self.bgc_import_f = [0.25, 0.4, 0.8, 1]
                root.select_file()