#:import Window kivy.core.window.Window
<CreateFlashcardsScreen>:
    FloatLayout:
        Video:
            id: video
            source: 'dym.mp4'
            state: 'play'
            options: {'eos': 'loop'}
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Image:
            source: 'logo2.png'
            size_hint: 0.568, 0.568
            pos_hint: {'center_x': 0.5, 'center_y': 0.825}

        Button:
            id: btn
            text: 'Back'
            size_hint: 0.28, None
            height: Window.height * 0.08
            pos_hint: {'x': 0, 'top': 1}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 4, ]
            on_release: app.change_screen('create_flashcards_first')

        TextInput:
            id: word1
            hint_text_color: [1,1,1,1]
            foreground_color: [1,1,1,1]
            hint_text: "Enter word"
            background_color: [0,0,0,0]
            background_image: ""
            background_normal: ""
            background_active: ""
            multiline: False
            size_hint: 0.7 ,0.07
            pos_hint: {'center_x':0.5, 'center_y':0.55}
            canvas.before:
                Color:
                    rgba: 1,1,1,0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 20,

        TextInput:
            id: word2
            hint_text_color: [1,1,1,1]
            foreground_color: [1,1,1,1]
            hint_text: "Enter translation of the word"
            background_color: [0,0,0,0]
            background_image: ""
            background_normal: ""
            background_active: ""
            multiline: False
            size_hint: 0.7 ,0.07
            pos_hint: {'center_x':0.5, 'center_y':0.475}
            canvas.before:
                Color:
                    rgba: 1,1,1,0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 20,

        Button:
            text: 'Save'
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            size_hint: 0.58, None
            height: Window.height * 0.08
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 4, ]
            on_press:
                app.save_words(word1.text, word2.text)

        Button:
            text: '    Create  \nFlashcards'
            pos_hint: {'center_x': 0.5, 'center_y': 0.165}
            size_hint: 0.58, None
            height: Window.height * 0.08
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 4, ]
            on_press: root.create()
