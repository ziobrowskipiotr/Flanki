#:import Window kivy.core.window.Window
<CreateFlashcardsScreen>:
    FloatLayout:
        Video:
            id: video
            source: 'galactic.avi'
            state: 'play'
            options: {'eos': 'loop'}
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Image:
            source: 'logo2.png'
            size_hint: 0.568, 0.568
            pos_hint: {'center_x': 0.5, 'center_y': 0.825}

        MyButton:
            text: 'Home'
            size_hint: 0.28, None
            height: Window.height * 0.08
            pos_hint: {'x': 0, 'top': 1}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: self.bgc_homeback
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 4, ]
            on_press: self.bgc_homeback = self.background_down_color
            on_release:
                self.bgc_homeback = [0.4, 0.4, 0.4, 1]
                app.change_screen('main')

        TextInput:
            id: folder_name_input
            hint_text_color: [1,1,1,1]
            foreground_color: [1,1,1,1]
            hint_text: "Enter new folder name"
            background_color: [0,0,0,0]
            background_image: ""
            background_normal: ""
            background_active: ""
            multiline: False
            size_hint: 0.58 ,0.08
            pos_hint: {'center_x':0.5, 'center_y':0.55}
            canvas.before:
                Color:
                    rgba: 1,1,1,0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 20,

        MyButton:
            text: 'Create Folder'
            size_hint: 0.28, None
            font_size: min(self.height * 0.52, self.width * 0.15)
            height: Window.height * 0.08
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: self.bgc_create_folder
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 4, ]
            on_press: self.bgc_create_folder = self.background_down_color
            on_release:
                root.create_new_flashcard_folder()
                self.bgc_create_folder = [0.25, 0.4, 0.8, 1]
