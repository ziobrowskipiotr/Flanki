<RegistrationScreen>:
    on_pre_enter:
        self.ids.first_name.text = ''
        self.ids.last_name.text = ''
        self.ids.email.text = ''
        self.ids.phone_number.text = ''
    FloatLayout:
        Video:
            source: 'dym.mp4'
            state: 'play'
            options: {'eos': 'loop'}
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Image:
            source: 'logo2.png'
            size_hint: 0.568, 0.568
            pos_hint: {'center_x': 0.5, 'center_y': 0.825}

        Button:
            id: btn
            text: 'Home'
            size_hint: 0.28, None
            height: Window.height * 0.08
            pos_hint: {'x': 0, 'top': 1}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 4, ]
            on_release: app.change_screen('login')

        TextInput:
            id: first_name
            hint_text_color: [1,1,1,1]
            foreground_color: [1,1,1,1]
            hint_text: 'Name'
            background_color: [0,0,0,0]
            background_image: ""
            background_normal: ""
            background_active: ""
            multiline: False
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.52}
            canvas.before:
                Color:
                    rgba: 1,1,1,0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 20,

        TextInput:
            id: last_name
            hint_text_color: [1,1,1,1]
            foreground_color: [1,1,1,1]
            hint_text: 'Surname'
            background_color: [0,0,0,0]
            background_image: ""
            background_normal: ""
            background_active: ""
            multiline: False
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.41}
            canvas.before:
                Color:
                    rgba: 1,1,1,0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 20,

        TextInput:
            id: email
            hint_text_color: [1,1,1,1]
            foreground_color: [1,1,1,1]
            hint_text: 'Email'
            background_color: [0,0,0,0]
            background_image: ""
            background_normal: ""
            background_active: ""
            multiline: False
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.30}
            canvas.before:
                Color:
                    rgba: 1,1,1,0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 20,

        TextInput:
            id: phone_number
            hint_text_color: [1,1,1,1]
            foreground_color: [1,1,1,1]
            hint_text: 'Phone number'
            background_color: [0,0,0,0]
            background_image: ""
            background_normal: ""
            background_active: ""
            multiline: False
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.19}
            canvas.before:
                Color:
                    rgba: 1,1,1,0.5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 20,

        Button:
            text: 'Next'
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}
            size_hint: 0.8, 0.1
            height: Window.height * 0.08
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.height / 4, ]
            on_release: app.register(first_name.text, last_name.text, email.text, phone_number.text)
